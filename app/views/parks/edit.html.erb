<h2>Park Edit Form</h>

  <%= form_for @park do |f| %>
    <div class = "field">
      <%= f.label :name%>
      <%= f.text_field :name %>
      <br />
    </div>

    <div class = "field">
      <%= f.label :location%>
      <%= f.text_field :location %>
      <br />
    </div>

    <div class = "field">
      <%= f.label :description%>
      <%= f.text_field :description %>
      <br />
    </div>

    <div class = "field">
      <%= f.label :image%>
      <%= f.text_field :image %>
      <br />
    </div>

    <div class = "actions">
      <%= f.submit "Edit Park" %>
      <br />
    </div>
  <%end%>

  <% if @form_error %>
    <%@form_error.each do |error| %>
      <p><%=error %></p>
  <%end%>
<%end%>
