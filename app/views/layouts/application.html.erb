<!DOCTYPE html>
<html>
<head>
  <title>NPReviews</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch|Fredericka+the+Great|Liu+Jian+Mao+Cao|Monoton|Sigmar+One&display=swap" rel="stylesheet">
</head>
<body>


  <div class="contain-to-grid sticky">

    <nav class="top-bar" data-topbar role="navigation">
      <h1 class='title'>
        <%= link_to 'NATIONAL PARKS REVIEW', parks_path %>
      </h1>

      <section class="top-bar-section">
        <%- if current_user -%>
          <div class="button round">
            <%= link_to 'Add a Park!', parks_new_path %>
          </div>
          <div class="button round">
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
          </div>
        <%- else -%>
          <div class="button round">
            <%= link_to 'Sign Up', new_user_registration_path %>
          </div>
          <div class="button round">
            <%= link_to 'Sign In', new_user_session_path %>
          </div>
        <%- end -%>
      </section>
    </nav>
  </div>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

    <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%- if Rails.env.development? || Rails.env.test? -%>
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>

  <%= yield :extra_footer %>
</body>
</html>
